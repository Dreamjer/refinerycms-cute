<%= form_for [refinery, :cutes_admin, @cute] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @cute,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :project -%>
    <%= f.text_field :project -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "cutes/cute" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.cutes.admin.cutes.cute'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @cute.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
